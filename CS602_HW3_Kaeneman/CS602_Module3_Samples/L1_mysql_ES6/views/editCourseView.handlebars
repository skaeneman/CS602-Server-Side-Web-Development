<div class="table-responsive">
  <form method="post" action='/courses/edit/{{data.id}}'>
    <table class="table table-condensed">
      <tbody>
        <tr>
          <th>Course Number: </td>
          <td><input type="text" name="cnumber" required 
                  value="{{data.course_number}}"></td>
        </tr>
        <tr>
          <th>Course Name: </td>
          <td><input type="text" name="cname" required 
                  value="{{data.course_name}}"></td>
        </tr>
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
              <input type="submit" value="Save" class="btn btn-success">
              <input type="button" value="Cancel" class="btn btn-danger"
                  class="cancel" onclick="cancelAdd()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
