<div>
	<div class="table-responsive">
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Course Number</th>
					<th>Course Name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{{#each data}}
					<tr>
						<td>{{this.course_number}}</td>
						<td>{{this.course_name}}</td>
						<td>
							<a href="/courses/edit/{{this.id}}">Edit</a>
							<a href="/courses/delete/{{this.id}}">Delete</a>
						</td>
					</tr>
				{{/each}}
			</tbody>
			<tfooter>
				<tr><td>
				<button class="btn btn-primary" 
						onClick="addCourse();">Add</button>
				</td></tr>
			</tfooter>
		</table>
	</div>
</div>
