  <div class="row">
    <div class="col-sm-12">

        <div class="row">            
            <div class="col-sm-6 text-center">image</div>
            
            <!-- product details -->
            <div class="col-sm-6">
                <div><h5>{{data.name}}</h5></div><br>                
